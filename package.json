{
  "name": "lead-crm",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/server",
    "packages/client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev -w packages/server",
    "dev:client": "npm run dev -w packages/client",
    "build": "npm run build -w packages/client && npm run build -w packages/server",
    "start": "npm run start -w packages/server"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.3",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "papaparse": "^5.5.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.12.0",
    "@types/node-cron": "^3.0.11",
    "@types/papaparse": "^5.3.15",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.1.2",
    "typescript": "^5.7.3"
  }
}
